<section>
  <div class="container">
    <div class="row">
      <div class="col d-flex justify-content-center">
        <div class="login-form p-3 rounded">
          <%= form_tag('/authenticate', method: 'post') do %>
          <div class="form-group">
            <%= label_tag('', 'Email', class: 'small') %>
            <%= email_field_tag(:email, '', class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag('', 'Password', class: 'small') %>
            <%= password_field_tag(:password, '', class: 'form-control') %>
          </div>
          <br>
          <%= submit_tag('Log In', class:'btn btn-primary btn-block') %>
          <% end %>
      </div>
    </div>
  </div>
</section>
