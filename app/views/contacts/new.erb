<div class="new-contact-container">
  <div class="close-contact-new">
    <button type="button" class="justify-content-end close" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="new-contact-form">
    <%= form_for @contact, url: { action: 'create'} do |f| %>
    <div class="form-group">
      <%= f.label '', 'Name*', class: 'small' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Role*', class: 'small' %>
      <%= f.text_field :role, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Email*', class: 'small' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Phone*', class: 'small' %>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Decision Maker*', class: 'small' %>
      <%= f.select(:decision_maker, [['No', false], ['Yes', true]], {}, {class: 'form-control'}) %>
    </div>
    <%= f.submit 'Create Contact', id: 'contact_submit', class: 'btn btn-primary btn-sm btn-block', disabled: true %>
    <% end %>
  </div>
</div>
